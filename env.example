# Supabase Configuration
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key

# Resend Email Configuration
VITE_RESEND_API_KEY=re_your_resend_api_key
# Note: For server-side usage, you can also use RESEND_API_KEY
RESEND_API_KEY=re_your_resend_api_key

# Application Configuration
VITE_APP_NAME=Peaceful Investment
VITE_APP_URL=http://localhost:8080
VITE_APP_ENV=development

# Auto logout (inactivity)
# Minutes of inactivity before the user is automatically signed out.
VITE_INACTIVITY_MINUTES=15

# Supabase Edge Functions Configuration
# Set this in your Supabase dashboard under Project Settings > Edge Functions > Secrets
# Required for most Edge Functions:
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Used in prayer notification/reminder links inside emails/SMS:
SITE_URL=https://www.peacefulinvestment.com

# Used by auth-related Edge Functions (password reset / email verification / referrals) for link building:
# If not set, functions fall back to https://peacefulinvestment.com
APP_BASE_URL=https://www.peacefulinvestment.com

# Optional: Twilio (SMS/Voice) for prayer notifications
# By default, SMS/Voice are disabled to avoid noisy logs in Edge Functions.
TWILIO_ENABLE_SMS=true
TWILIO_ENABLE_VOICE=false
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_PHONE_NUMBER=+15551234567
# Optional (if different from SMS number)
TWILIO_VOICE_FROM_NUMBER=+15551234567

# Optional: Analytics
VITE_GOOGLE_ANALYTICS_ID=your_ga_id

# Optional: Sentry Error Tracking
VITE_SENTRY_DSN=your_sentry_dsn


